<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <meta http-equiv="Content-Security-Policy" content="default-src data: gap://* file://* https://ssl.gstatic.com *; img-src 'self' * data:; style-src 'self' 'unsafe-inline' *; script-src 'self' 'unsafe-eval' 'unsafe-inline' *; connect-src 'self' * ws://* wss://*;">

  </head>
  <body>
    <div class="page-header text-center">
      <img src="/images/xummlogo/xumm-logo.svg" class="img-fluid" alt="XUMM Logo"  width=150" height="150">
    <h1><%= title %></h1>
    
  </div>
    <div class="text-center">
         
      <span id="name" > XUMM payment payload</span>
      <br></br>
     
      <br></br>
      
      <a id="link" href="">
          
        <img id="image" alt="Xumm-QRcode" width=150" height="150">
     </a>
   
    
  </body>
  <script src="/socket.io/socket.io.js"></script>
<script>

    var socket = io('http://localhost:3001');
    
	var suc = null;
    socket.on('qr', function (data) {
    	
    	document.getElementById('image').src=(data);
    	document.getElementById('name').innerHTML=(data);
    	
    });

    socket.on('success', function (data) {
      //console.log(data)
      suc = data
      if(suc !== null){
      alert("Payment Succesfull, Releasing Door Now");
    
      }
     suc = null
    });
    </script>
</html>
